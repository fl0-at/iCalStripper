{
  "name": "i-cal-stripper",
  "version": "0.8.0",
  "description": "iCal Stripper",
  "main": "main.js",
  "scripts": {
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac"
  },
  "build": {
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "productName": "iCalStripper",
    "appId": "at.fl0|electron.iCalStripper",
    "win": {
      "target": [
        "portable",
        "appx",
        "nsis",
        "nsis-web"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "appx": {
      "identityName": "iCalStripper"
    }
  },
  "author": {
    "name": "fl0-at",
    "email": "florianjohannesloeffler@gmail.com"
  },
  "dependencies": {
    "air-datepicker": "^3.3.5",
    "console-log-json": "^2.9.0",
    "ical-toolkit": "^1.0.9",
    "random-words": "^1.2.0"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0"
  }
}
